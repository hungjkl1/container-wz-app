{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "post",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "max": 200
    },
    "content": {
      "type": "richtext",
      "required": true,
      "max": 500
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    }
  }
}
